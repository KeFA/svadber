
<h1>Список гостей</h1>
<table class="guest-list" width="100%">
  <thead>
  <tr>
    <th class="guest-list-full-name-header" colspan="3">Полное имя гостя</th>
    <th class="guest-list-city-header" rowspan="2">Город</th>
    <th class="guest-list-status-header" rowspan="2">Статус</th>
  </tr>
  <tr>
    <th class="guest-list-name-header">Фамилия</th>
    <th class="guest-list-second-name-header">Имя</th>
    <th class="guest-list-middle-name-header">Отчество</th>
  </tr>
  </thead>
  <tbody>
  <% @guests.each do |guest| %>
    <tr>
      <td>
        <p class="editable-text"><%= guest.last_name %></p>
        <input class="hidden" type="text" value="<%= guest.last_name %>" />
      </td>
      <td>
        <p class="editable-text"><%= guest.first_name %></p>
        <input class="hidden" type="text" value="<%= guest.first_name %>" />
      </td>
      <td>
        <p class="editable-text"><%= guest.middle_name %></p>
        <input class="hidden" type="text" value="<%= guest.middle_name %>" />
      </td>
      <td>Минск</td>
      <td>
        <select>
          <option selected>Жених</option>
          <option>Невеста</option>
          <option>Родители жениха</option>
          <option>Родители невесты</option>
        </select>
      </td>
    </tr>
  <% end %>

  </tbody>
</table>