<tr>
  <td>
    <input type="hidden" class="guest-update-url" value="<%= guest_path(guest) %>"/>
    <% index ||= guest_counter %>
    <%= index + 1 %>
  </td>
  <td>
    <p class="editable-text" model-attr="last_name"><%= guest.last_name %></p>
    <input class="hidden" type="text" placeholder="Введите фамилию" value="<%= guest.last_name %>"/>
  </td>
  <td>
    <p class="editable-text" model-attr="first_name"><%= guest.first_name %></p>
    <input class="hidden" type="text" placeholder="Введите имя" value="<%= guest.first_name %>"/>
  </td>
  <td>
    <p class="editable-text" model-attr="middle_name"><%= guest.middle_name %></p>
    <input class="hidden" type="text" placeholder="Введите отчество" value="<%= guest.middle_name %>"/>
  </td>
  <td><%= guest.city %></td>
  <td>
    <p class="editable-text" model-attr="status"><%= guest.status %></p>
    <select class="editable-select hidden">
      <% guest_statuses.each do |status| %>
          <% unless status.empty? %>
              <% if guest.status == status %>
                  <option selected="selected"><%= status %></option>
              <% else %>
                  <option><%= status %></option>
              <% end %>
          <% end %>
      <% end %>
      <option class="add_new_value">Другой...</option>
    </select>
    <input class="hidden" type="text" placeholder="Введите название статуса"/>
    <%= link_to raw('<i rel="tooltip" title="Удалить" class="icon-remove"></i>'), guest_path(guest), method: :delete, remote: true, confirm: 'Вы уверены?' %>
  </td>
</tr>