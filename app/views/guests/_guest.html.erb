<tr>
  <td>
    <input type="hidden" class="guest-update-url" value="<%= guest_path(guest) %>"/>
    <% index ||= guest_counter %>
    <%= index + 1 %>
  </td>
  <td model-attr="last_name">
    <p class="editable-text"><%= guest.last_name %></p>
    <input class="hidden" type="text" placeholder="Введите фамилию" value="<%= guest.last_name %>"/>
  </td>
  <td model-attr="first_name">
    <p class="editable-text"><%= guest.first_name %></p>
    <input class="hidden" type="text" placeholder="Введите имя" value="<%= guest.first_name %>"/>
  </td>
  <td model-attr="middle_name">
    <p class="editable-text"><%= guest.middle_name %></p>
    <input class="hidden" type="text" placeholder="Введите отчество" value="<%= guest.middle_name %>"/>
  </td>
  <td model-attr="city">
    <select class="editable-select" style="width: 250px;">
      <% guest_cities.each do |city| %>
          <% unless city.nil? %>
              <% if guest.city == city %>
                  <option selected="selected"><%= city %></option>
              <% else %>
                  <option><%= city %></option>
              <% end %>
          <% end %>
      <% end %>
    </select>
  </td>
  <td model-attr="status">
    <select class="editable-select" style="width: 250px;">
      <% @statuses.each do |status| %>
          <% unless status.nil? %>
              <% if guest.status == status %>
                  <option selected="selected"><%= status %></option>
              <% else %>
                  <option><%= status %></option>
              <% end %>
          <% end %>
      <% end %>
    </select>
    <input class="hidden" type="text" placeholder="Введите название статуса"/>
    <%= link_to raw('<i rel="tooltip" title="Удалить" class="icon-remove"></i>'), guest_path(guest), method: :delete, remote: true %>
  </td>
</tr>