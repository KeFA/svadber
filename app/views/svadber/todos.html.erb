<div class="page-header">
  <h1>
    Задачи
    <small>
      <i class="icon-double-angle-right"></i>
      Draggabble Widget Boxes &amp; Containers
    </small>
  </h1>
</div>

<div class="row" ng-controller="TodosCtrl">
  <form class="form-horizontal">
    <input type="text" ng-model="addTodoText"/>
    <button ng-click="addTodo()">Добавить задачу</button>
  </form>
  <ul ng-repeat="item in items">
    <li>
      <input type="checkbox" ng-checked="item.done" ng-click="updateTodo(item)"/>
      {{ item.description }}
      <button ng-click="removeTodo(item.id)">Удалить</button>
    </li>
  </ul>
</div>