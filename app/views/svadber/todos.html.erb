<div ng-controller="TodosCtrl">
  <form class="form-horizontal">
    <input type="text" ng-model="addTodoText"/>
    <button ng-click="addTodo()">Добавить задачу</button>
  </form>
  <ul ng-repeat="todo in todos">
    <li>
      <input type="checkbox" ng-checked="todo.done" ng-click="updateTodo(todo)"/>
      {{ todo.description }}
      <button ng-click="removeTodo(todo.id)">Удалить</button>
    </li>
  </ul>
</div>